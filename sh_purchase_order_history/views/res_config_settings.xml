<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_res_config_settings_view_form_inherited" model="ir.ui.view">
        <field name="name">sh.res.config.settings.inherit.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']//div[1]" position="after">
            	<h2>Purchase Order History Configuration</h2>
                <div class="row mt16 o_settings_container sale_history">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Last No. of Orders</span>
                            <div class="text-muted">
                                <field name="sh_purchase_configuration_limit" />
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Last No. of Day's Orders</span>
                            <div class="text-muted">
                                <field name="purchase_day" />
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Stages</span>
                            <div class="text-muted">
                                <field name="purchase_stages" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" />
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="reorder_configurator">
                        <div class="o_setting_left_pane">
                            <field name="enable_purchase_reorder" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_purchase_reorder" />
                            <div class="text-muted">
                                Enable Reorder Button For Purchase order History
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
