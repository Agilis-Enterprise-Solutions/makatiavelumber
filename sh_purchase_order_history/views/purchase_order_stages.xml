<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_purchase_order_stages_tree_view" model="ir.ui.view">
        <field name="name">purchase.order.stages.tree</field>
        <field name="model">purchase.order.stages</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="stage_key" />
                <field name="color" widget="color_picker" />
                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>

    <record id="sh_purchase_order_stages_action" model="ir.actions.act_window">
        <field name="name">Purchase Order Stages</field>
        <field name="res_model">purchase.order.stages</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create new Stages for Purchase Order
            </p>
            <p>
                Create Stages that fit your business to better manage and track your Purchase Order.
            </p>
        </field>
    </record>

    <menuitem id="sh_purchase_stages_menu" name="Purchase Order Stages" action="sh_purchase_order_history.sh_purchase_order_stages_action" parent="purchase.menu_purchase_config" groups="base.group_user" />
</odoo>
